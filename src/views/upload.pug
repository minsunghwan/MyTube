extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST" enctype="multipart/form-data")
        label(for="video") Video File
        input(type="file" accept="video/*" id="video" name="video" required)
        label(for="thumb") Thumbnail File
        input(type="file" accept="image/*" id="thumb" name="thumb" required)
        input(placeholder="Title" type="text" id="title" name="title" maxlength=30 required)
        input(placeholder="Description" type="description" id="description" name="description" minlength=5 required)
        input(placeholder="Hashtags , separated by comma."  type="text" name="hashtags" required)
        input(type="submit" value="Upload Video")


